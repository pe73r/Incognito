<style>
	 {% for block in section.blocks %}
       #block--{{ block.id }} .SliderTitleMobile{
         color: {{ block.settings.color-title-mobile }};
			  }
	 {% endfor %}
</style>
<section class="section HomepageSlider relative">
	<div class="container--large container--bordered ">
		<div class="hero hero--{{ section.settings.hero_size }}">
			<div class="hero__inner">
       <div class="carousel" data-flickity='{ "prevNextButtons": true , "pageDots": false, "wrapAround": true }'>
		    {% for block in section.blocks %}
		    {% if block.type == 'slide-style-1' %}
		 		 <div id="block--{{ block.id }}" class="carousel-cell SliderBackground" data-aos="fade-up" data-aos-duration="5000" data-aos-easing="ease-in-out">
					  <div class="SliderDesktop desktop-only relative ">
							 <div class="BoxProjectType ">
							 	  <h2>{{ block.settings.dev }}</h2>
									<p>{{ block.settings.dev-subtitle }}</p>
							 </div>
			         <div class="SliderContent">
			           <h2 class="Heading">{{ block.settings.title }}</h2>
								 <div class="">
								 	 {{ block.settings.content }}
								 </div>
								 {% if block.settings.button-text != blank %}
								   <a class="button button-custom" href="{{ block.settings.url }}">{{ block.settings.button-text }}</a>
								 {% endif %}
			        </div>
						 <div class="SliderImage">
							 <img class="full-width" src="{{ block.settings.slide | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						 </div>
					  </div>
						<div class="SliderMobile mobile-only">
							<!-- <h2  class="h1">Quelques exemples</h2> -->
							<img class="full-width" src="{{ block.settings.slide-mobile | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
							<h2 class="Heading h1 outline SliderTitleMobile">{{ block.settings.title }}</h2>
							<div class="">
								{{ block.settings.content }}
							</div>
							{% if block.settings.button-text != blank %}
							<a class="button button-custom" href="{{ block.settings.url }}">{{ block.settings.button-text }}</a>
							{% endif %}
						</div>
		 		 </div>
			{% elsif block.type == 'slide-style-2' %}
					<div id="block--{{ block.id }}" class="carousel-cell SliderBackground">
						<div class="SliderDesktop desktop-only relative ">
							 <div class="BoxProjectTypeInvert">
									<h2>{{ block.settings.dev }}</h2>
									<p>{{ block.settings.dev-subtitle }}</p>
							 </div>
							 <div class="SliderContent ContentInvert">
								 <h2 class="Heading">{{ block.settings.title }}</h2>
								 <div class="">
									 {{ block.settings.content }}
								 </div>
								 {% if block.settings.button-text != blank %}
								 <a class="button button-custom" href="{{ block.settings.url }}">{{ block.settings.button-text }}</a>
								 {% endif %}
							</div>
						 <div class="SliderImage invert">
							 <img class="full-width" src="{{ block.settings.slide | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						 </div>
						</div>
						<div class="SliderMobile mobile-only">
							<img class="full-width" src="{{ block.settings.slide-mobile | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
							<h2 class="Heading h1 outline SliderTitleMobile">{{ block.settings.title }}</h2>
							<div class="">
								{{ block.settings.content }}
							</div>
							{% if block.settings.button-text != blank %}
								<a class="button button-custom" href="{{ block.settings.url }}">{{ block.settings.button-text }}</a>
							{% endif %}
						</div>
				 </div>
			{% endif %}
 	  {% endfor %}
   </div>
   </div>
  </div>
 </div>
