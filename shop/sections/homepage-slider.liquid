
<section class="section HomepageSlider relative">
	<div class="container--large container--bordered ">
  <div class="carousel SliderPadding" data-flickity='{ "prevNextButtons": true , "pageDots": false }'>
		{% for block in section.blocks %}
		  {% if block.type == 'slide-style-1' %}
		 		 <div id="block--{{ block.id }}" class="carousel-cell SliderBackground">
					  <div class="SliderDesktop desktop-only relative ">
							 <div class="BoxProjectType ">
							 	  <h2>{{ block.settings.dev }}</h2>
									<p>{{ block.settings.dev-subtitle }}</p>
							 </div>
			         <div class="SliderContent">
			           <h2 class="">{{ block.settings.title }}</h2>
								 <div class="">
								 	 {{ block.settings.content }}
								 </div>
								 <a class="button button-custom" href="{{ blcok.settings.url }}">SEE THE PROJECT</a>
			        </div>
						 <div class="SliderImage">
							 <img class="full-width" src="{{ block.settings.slide | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						 </div>
					  </div>
						<div class="SliderMobile mobile-only">
							<img class="full-width" src="{{ block.settings.slide-mobile | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						</div>
		 		 </div>
			{% elsif block.type == 'slide-style-2' %}
					<div id="block--{{ block.id }}" class="carousel-cell SliderBackground">
						<div class="SliderDesktop desktop-only relative ">
							 <div class="BoxProjectTypeInvert">
									<h2>{{ block.settings.dev }}</h2>
									<p>{{ block.settings.dev-subtitle }}</p>
							 </div>
							 <div class="SliderContent ContentInvert">
								 <h2 class="">{{ block.settings.title }}</h2>
								 <div class="">
									 {{ block.settings.content }}
								 </div>
								 <a class="button button-custom" href="{{ blcok.settings.url }}">SEE THE PROJECT</a>
							</div>
						 <div class="SliderImage invert">
							 <img class="full-width" src="{{ block.settings.slide | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						 </div>
						</div>
						<div class="SliderMobile mobile-only">
							<img class="full-width" src="{{ block.settings.slide-mobile | img_url:'master' }}" alt="{{ section.settings.slide-1.alt }}">
						</div>
				 </div>
			{% endif %}
 	  {% endfor %}
  </div>
	</div>
<section>

