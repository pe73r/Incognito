<style>
  {% if block.settings.background-image %}
    #block-{{ block.id }} .TextCenteredBackground{
      background-image: url("{{ block.settings.background-image | img_url:'master' }}");
     }
  {% endif%}
</style>
<section id="block-{{ block.id }}" class="relative block-text-centered">
  <div class="container container--bordered TextCenteredBackground">
    <div class="hero hero--{{ block.settings.hero_size }} ">
      <div class="hero__inner ">
        <div class="page-width text-center" >
          {%- if block.settings.text != blank -%}
             <h2 id="mega-title" class="h1 TextCenteredTitle{% if block.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ block.settings.text }}</h2>
          {%- endif -%}
          {% if block.settings.arrow %}
            <div class="arrowDown relative">
              {% render 'icon-arrow-down' %}
            </div>
          {% endif %}
          {% if block.settings.button %}
            <div class="TextCenteredButton">
              <div class="button button-custom">
                 <div class="button-slide"></div>
                 <a href="{{ block.settings.url }}">{{ block.settings.button-text }}</a>
              </div>
            </div>
          {% endif %}
        </div>
     </div>
    </div>
  </div> 
</section>
